#include <stdio.h>
#include <string.h>

/**
* main - Saves the password in password in the file 101-password
* Return: 0
*/

int main()
{
	char password[] = "Hol";
	FILE *fp;

	/* open file in binary mode for writing */
	fp = fopen("101-password", "wb");

	/* loop through each character in password */
	for (int i = 0; i < 3; i++)
	{
	/* write the character to file */
	fputc(password[i], fp);
	}
	fclose(fp);

	/* open file in binary mode for reading */
	fp = fopen("101-password", "rb");

	/* Read password from the file */
	fread(password, sizeof(char), 3, fp);
	password[3] = '\0';

	fclose(fp);

	/* compare the password to the hardcoded string */
	if (strcmp(password, "Hol") == 0)
	{
	printf("Congratulations!\n");
	}
	else
	{
	printf("Incorrect password.\n");
	}
	return 0;
}
