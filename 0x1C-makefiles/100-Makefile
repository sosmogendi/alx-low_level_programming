CC = gcc
SRC = main.c school.c
NAME = school
RM = /bin/rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(SRC:.c=.o)

fclean: clean oclean
	$(RM) -f $(NAME)

re: fclean all
